@using ARS.Web
<MudNavMenu Class="d-flex flex-column flex-grow-1 mud-width-full" Bordered="true">
    <div class="pa-4 d-flex">
        <a href="/UserPage">
            <MudAvatar Image="https://cdn-icons-png.flaticon.com/512/147/147144.png"/>
        </a>
        
        <div class="ml-4">
            <MudText Typo="Typo.body2">Mario Gabriell</MudText>
            <MudText Typo="Typo.caption">Administrador</MudText>
        </div>
    </div>
    <MudDivider Vertical="false"/>
    @foreach (var navMenuType in ModuleHandler.Modules.Select(x => x.NavMenu))
    {
        <DynamicComponent Type="navMenuType"/>
    }
    <MudDivider Class="ma-2"/>
    <AuthorizeView Roles="Admin">
        
    </AuthorizeView>
    <MudNavGroup Title="Configurações Painel" Icon="@Icons.Filled.Settings" @bind-Expanded="ConfigExpanded">
                <MudNavLink Href="/Admin/Users" Icon="@Icons.Filled.People" IconColor="Color.Success">Usuários</MudNavLink>
                <MudNavLink Href="/Admin/Config" Icon="@Icons.Filled.DashboardCustomize" IconColor="Color.Info">Customização</MudNavLink>
            </MudNavGroup>
    @*Spacer*@
    <div class="flex-grow-1"></div>
    <div class="d-flex flex-row align-content-center mb-2 align-self-center">
        <MudImage Src="@Consts.LogoSvg" Class="mx-2" Width="25" Alt="Logo"></MudImage>
        <MudText Align="Align.Center">MGK V1.0.0.0</MudText>
    </div>
</MudNavMenu>

@code
{
    public bool ConfigExpanded { get; set; } = false;
}