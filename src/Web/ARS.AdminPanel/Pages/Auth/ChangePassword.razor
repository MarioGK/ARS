@layout AuthenticationLayout
@page "/Auth/ChangePassword"

<MudCardContent>
    <MudTextField @bind-Value="Old" Label="Senha Antiga" Required="true" RequiredError="Senha nao pode ser ficar vazia" InputType="InputType.Password"/>
    <MudTextField @bind-Value="New" Label="Nova Senha" Required="true" RequiredError="Senha nao pode ficar vazia" InputType="InputType.Password"/>
    <MudTextField @bind-Value="Old" Label="Repetir Senha" Required="true" RequiredError="Senha nao pode ser ficar vazia" InputType="InputType.Password"/>
</MudCardContent>
<MudCardActions>
    <MudButton
        Class="ml-auto"
        Variant="Variant.Filled"
        Color="Color.Primary">
        Trocar Senha
    </MudButton>
</MudCardActions>

@code {
    string? New { get; set; }
    string? Old { get; set; }
    bool RememberMe { get; set; }
}